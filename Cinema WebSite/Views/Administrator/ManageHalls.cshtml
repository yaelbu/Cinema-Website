@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models
@{
    ViewBag.Title = "ManageHalls";

}

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Index</title>
    <style>
        body {
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }

        div1 {
            background-color: red;
        }
    </style>

</head>









<body>

    <div>
        <h1 style="text-align:left">Add a Hall</h1>
        @using (Html.BeginForm("SaveHall", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div style="margin-left: 20px">

                <br />
                <i>Hall Name :</i>
                @Html.TextBoxFor(x => x.MVHall.Hall_Name, new { placeholder = "Hall name", @class = "input-box", @id = "Text1", @type = "text" })
                <br />@Html.ValidationMessageFor(x => x.MVHall.Hall_Name, "", new { @class = "error" })
                <br />

                <i>Capacity :</i>
                @Html.TextBoxFor(x => x.MVHall.Capacity, new { placeholder = "Hall Capacity", @class = "input-box", @id = "Text1", @type = "text" })
                <br />@Html.ValidationMessageFor(x => x.MVHall.Capacity, "", new { @class = "error" })
                <br />



                <input id="submit1" type="submit" class="sign-btn" value="Save">
                <hr />

            </div>
        }
    </div>



    <table>
        <tr>
            <th>Hall Name</th>
            <th>Capacity</th>
            <th></th>
        </tr>
        @foreach (Hall hall in Model.MVHalls)
        {


            <tr>
                
                <td>@hall.Hall_Name</td>
                <td>@hall.Capacity</td>
                <td>
                    @using (Html.BeginForm("DeleteHall", "Administrator", new { id = hall.Id }))
                    {
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete the Hall @hall.Hall_Name');" />
                    }

                    @using (Html.BeginForm("UpdateHall", "Administrator", new { id = hall.Id }))
                    {
                        <input type="submit" value="Update" />
                    }
                    @using (Html.BeginForm("DetailsHall", "Administrator", new { id = hall.Id }))
                    {
                        <input type="submit" value="Detail" />
                    }


                </td>

            </tr>


        }
    </table>
    @using (Html.BeginForm("Logout", "Administrator", FormMethod.Post))
    {
        <input id="Submit1" type="submit" value="Log out" />
    }


</body>













