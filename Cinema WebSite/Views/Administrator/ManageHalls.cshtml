@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models
@{
    ViewBag.Title = "ManageHalls";

}

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Index</title>
    <style>

        .ui-datepicker-trigger {
            float: inherit;
            glyph-orientation-vertical: auto;
        }
        .sign-up-form {
            width: 88%;
            height: 280px;
            box-shadow: 0 0 10px 0 rgba(0,0,0,0.3);
            background: #fff;
            padding: 20px;
            margin: 8% auto 0;
            margin-bottom: 50px;
            margin-top: 55px;
            background-color: rgba(201, 150, 115, 0.8);
            border-color: black;
            border-radius: 5px;
        }
        body {
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }

        th, td {
            border: 1px solid black;
            margin-left: 10px;
            text-align: center;
        }

        table {
            border: 1px solid black;
            width: 90%;
            margin-left: auto;
            margin-right: auto;
        }
        .newstyle {
            border-radius: 12px;
            border-width: thin;
            font-size: 16px;
            border-color: black;
            margin: 4px;
            padding-left: 8px;
            padding-right: 8px;
            padding-bottom: 4px;
            padding-top: 4px;
            background-color: transparent;
        }
        .container1 {
            display: flex;
            justify-content: center;
            align-items: center;
        } 

        .field-validation-error {
            color: black;
            font-weight: bold;
            font-size: 12px;
        }
        .container {
            width: 300px;
            height: 75px;
            display: flex;
            padding: 20px;
            justify-content: center;
            align-items: center;
        }
        .input-box {
            border-radius: 15px;
            padding: 5px;
            height: 22px;
            width: 225px;
            border: 1px solid #918787;
            outline: none;
        }
    </style>

</head>









<body>

    @if (ViewBag.message11 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message11');
            };
        </script>
    }


    @if (ViewBag.message18 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message18');
            };
        </script>
    }
    @Html.HiddenFor(model => model.MVHall.Hall_Name)


    @if (ViewBag.message19 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message19');
            };
        </script>
    }


    @if (ViewBag.message20 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message20');
            };
        </script>
    }


    @if (ViewBag.message21 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message21');
            };
        </script>
    }




    @Html.HiddenFor(model => model.MVHall.Hall_Name)




    <div class="container">
        @using (Html.BeginForm("AdministratorHome", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Home" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
        @using (Html.BeginForm("BackManageMovies", "Administrator", FormMethod.Post))
        {
            <input id="submit1" type="submit" class="sign-btn" value="Manage Movies" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">
        }
        @using (Html.BeginForm("BackManageMoviesProjection", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Manage Movies Projection" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
        @using (Html.BeginForm("ChangePasswordAdmin", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Change Password" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
        @using (Html.BeginForm("ManagePrices", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Manage Prices" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
        @using (Html.BeginForm("Logout", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Log out" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
    </div>




    <div class="sign-up-form">
        <h1 style="text-align:left">Add a Hall</h1>
        @using (Html.BeginForm("SaveHall", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div style="margin-left: 20px">

                <br />
                <i>Hall Name :</i>
                @Html.TextBoxFor(x => x.MVHall.Hall_Name, new { placeholder = "Hall name", @class = "input-box", @id = "Text1", @type = "text" })
                <br />@Html.ValidationMessageFor(x => x.MVHall.Hall_Name, "", new { @class = "error" })
                <br />

                <i>Capacity :</i>
                @Html.TextBoxFor(x => x.MVHall.Capacity, new { placeholder = "Hall Capacity", @class = "input-box", @id = "Text1", @type = "text" })
                <br />@Html.ValidationMessageFor(x => x.MVHall.Capacity, "", new { @class = "error" })
                <br />



                <input id="submit1" type="submit" class="sign-btn" value="Save" style="margin-bottom: 10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">


            </div>
        }
    </div>


    <br /><br />
    <table>
        <tr>
            <th>Hall Name</th>
            <th>Capacity</th>
            <th></th>
        </tr>
        @foreach (Hall hall in Model.MVHalls)
        {


            <tr>

                <td>@hall.Hall_Name</td>
                <td>@hall.Capacity</td>
                <td>
                    <div class="container1">
                        @using (Html.BeginForm("DeleteHall", "Administrator", new { id = hall.Id }))
                        {
                            <input type="submit" class="newstyle" value="Delete Hall" onclick="return confirm('Are you sure you want to delete the Hall @hall.Hall_Name');" />
                        }

                        @using (Html.BeginForm("UpdateHall", "Administrator", new { id = hall.Id }))
                        {
                            <input type="submit" class="newstyle" value="Update" />
                        }
                        @using (Html.BeginForm("DetailsHall", "Administrator", new { id = hall.Id }))
                        {
                            <input type="submit" class="newstyle" value="Detail" />
                        }
                    </div>

                </td>

            </tr>


        }
    </table>





</body>













