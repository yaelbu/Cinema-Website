@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models
@{
    ViewBag.Title = "DetailsMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <style>

    

        body {
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }
        .sign-up-form {
            width: 325px;
            height: 545px;
            box-shadow: 0 0 3px 0 rgba(0,0,0,0.3);
            background: #fff;
            top:100px;
            padding: 20px;
            margin: 8% auto 0;
            text-align: center;
            margin-bottom: 50px;
            margin-top: 55px;
            background-color: rgba(201, 150, 115, 0.8);
            border-color: darkgray;
        }
        .container {
            width: 300px;
            height: 100px;
            display: flex;
            padding: 20px;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

    </style>

</head>




<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />



<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<body>
 

        <div class="container">
            @using (Html.BeginForm("AdministratorHome", "Administrator", FormMethod.Post))
            {
                <input id="Submit1" type="submit" value="Home" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
            }
            @using (Html.BeginForm("BackManageMovies", "Administrator", FormMethod.Post))
            {
                <input id="submit1" type="submit" class="sign-btn" value="Manage Movies" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">
            }

            @using (Html.BeginForm("BackManageMoviesProjection", "Administrator", FormMethod.Post))
            {
                <input id="Submit1" type="submit" value="Manage Movies Projection" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
            }
            @using (Html.BeginForm("ManagePrices", "Administrator", FormMethod.Post))
            {
                <input id="submit1" type="submit" class="sign-btn" value="Manage Prices" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">
            }
            @using (Html.BeginForm("ManageHalls", "Administrator", FormMethod.Post))
            {
                <input id="submit1" type="submit" class="sign-btn" value="Manage Halls" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">
            }
            @using (Html.BeginForm("ChangePasswordAdmin", "Administrator", FormMethod.Post))
            {
                <input id="Submit1" type="submit" value="Change Password" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
            }
            @using (Html.BeginForm("Logout", "Administrator", FormMethod.Post))
            {
                <input id="Submit1" type="submit" value="Log out" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
            }



        </div>



        <div class="sign-up-form">
            <h1 style="font-weight:bold; text-decoration: underline;">@Html.DisplayFor(x => x.MVMovie.Title)</h1>
            <br />
            <img src="@Url.Content(Model.MVMovie.Poster)" height="300" width="220" />
            <br /><br /><br />
            <dt style="font-size:12px">Category : @Html.DisplayFor(x => x.MVMovie.Category)</dt>
            <dt>Realisator : @Html.DisplayFor(x => x.MVMovie.Realisator)</dt>
            <dt>Release date : @Html.DisplayFor(x => x.MVMovie.ReleaseDate) </dt>
            <dt>Running time : @Html.DisplayFor(x => x.MVMovie.RunningTime)minutes</dt>
            <dt>Price Movie : @Html.DisplayFor(x => x.MVMovie.Price)</dt>




        </div>



</body>

</html>