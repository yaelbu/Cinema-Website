@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models
@{
    ViewBag.Title = "DetailsMovieProjection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>

        .container {
            width: 300px;
            height: 75px;
            display: flex;
            padding: 20px;
            justify-content: center;
            align-items: center;
        }
        .sign-up-form {
            width: 88%;
            height: 310px;
            box-shadow: 0 0 10px 0 rgba(0,0,0,0.3);
            background: #fff;
            padding: 20px;
            margin: 8% auto 0;
            margin-bottom: 50px;
            margin-top: 55px;
            background-color: rgba(201, 150, 115, 0.8);
            border-color: black;
            border-radius: 5px;
        }

        body {
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }
    </style>

</head>




<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />



<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<body>

    <div class="container">
        @using (Html.BeginForm("BackManageMoviesProjection", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Back Movies" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }

        @using (Html.BeginForm("AdministratorHome", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Log out" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }
        @using (Html.BeginForm("Logout", "Administrator", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Log out" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }

    </div>



    <div class="sign-up-form">

        <dl style="align-items:normal;">
            <dt>
                @Html.DisplayNameFor(x => x.MVMovieProjection.Title) : @Html.DisplayFor(x => x.MVMovieProjection.Title)


            </dt>
            <dt>
                @Html.DisplayNameFor(x => x.MVMovieProjection.ProjectionDate): @Html.DisplayFor(x => x.MVMovieProjection.ProjectionDate)
            </dt>
            <dt>
                @Html.DisplayNameFor(x => x.MVMovieProjection.BeginProjectionHour) : @Html.DisplayFor(x => x.MVMovieProjection.BeginProjectionHour)
            </dt>
            <dt>
                @Html.DisplayNameFor(x => x.MVMovieProjection.ProjectionHall) : @Html.DisplayFor(x => x.MVMovieProjection.ProjectionHall)
            </dt>




        </dl>


    </div>






</body>

</html>