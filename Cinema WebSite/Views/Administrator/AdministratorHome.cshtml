@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdministratorHome</title>
    <style>
        * {
            padding: 0px;
            margin: 0px;
        }

        a {
            text-decoration: none;
            color: black;
            display: block;
            padding: 20px 5px;
            color: white;
        }

        body {
            font-family: Arial;
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }

        ul {
            top: 50px;
            position: absolute;
            width: 100%;
        }

        img {
            width: 40px;
        }

        input[type="checkbox"] {
            display: none;
        }

        nav {
            background-color: rgba(16,16,16,.5);
            width: 350px;
            height: 100%;
            position: absolute;
            left: -350px;
            transition: all .5s;
        }

        input[type="checkbox"]:checked ~ nav {
            transform: translateX(350px);
        }

        a:hover {
            background-color: rgba(176,224,230);
            color: black;
        }

        label {
            padding: 15px;
            position: absolute;
            z-index: 1;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>



<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



<body>
    <h1>Welcome @Html.DisplayFor(x => x.MVUser.FirstName) @Html.DisplayFor(x => x.MVUser.LastName)</h1>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MVUser.Email)



    @if (ViewBag.message14 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message14');
            };
        </script>
    }


    @if (ViewBag.message23 != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.message23');
            };
        </script>
    }


    <input type="checkbox" id="chec">
    <label for="chec">
        <img src="~/images/risco_menu.png" />
    </label>


    <nav>
        <ul>
            <li><a href="@Url.Action("ManageMovie","Administrator")">MANAGE MOVIES INFORMATIONS</a></li>
            <li><a href="@Url.Action("ManageMovieProjection","Administrator")">MANAGE MOVIES PROJECTION</a></li>
            <li><a href="@Url.Action("ManageHalls","Administrator")">MANAGE HALLS</a></li>
            <li><a href="@Url.Action("ManagePrices","Administrator")">MANAGE PRICES</a></li>
            <li><a href="@Url.Action("ChangePasswordAdmin","Administrator")">CHANGE PASSWORD</a></li>
            <li><a href="@Url.Action("Logout","Administrator")">LOG OUT</a></li>


        </ul>
    </nav>


</body>
</html>
