@model Cinema_WebSite.ModelView.CineViewModel
@using Cinema_WebSite.Models
@{
    ViewBag.Title = "ChangePasswordClient";

}
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>


        .container {
            width: 300px;
            height: 100px;
            display: flex;
            padding: 20px;
            justify-content: center;
            align-items: center;
        }


        body {
            background: url('/images/background_cine.jpg');
            background-size: 100%;
        }




        .sign-up-form {
            width: 325px;
            height: 475px;
            box-shadow: 0 0 3px 0 rgba(0,0,0,0.3);
            background: #fff;
            padding: 20px;
            margin: 8% auto 0;
            text-align: center;
            margin-bottom: 50px;
            margin-top: 55px;
        }



        .input-box {
            border-radius: 15px;
            padding: 5px;
            height: 25px;
            width: 225px;
            border: 1px solid #918787;
            outline: none;
        }

        .error {
            color: darkred;
            font-family: Candara;
            font-size: 70%;
            font-weight: bold;
        }
    </style>

</head>




<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />



<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>


    $(".toggle-password").click(function () {

        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });

</script>
<body>
    <div style=" background-color: rgba(201, 150, 115, 0.8);    border-color: black;        border-style: solid;        width: 98%;        margin-left: auto;        margin-right: auto; padding:20px">

        <h1>Change your password</h1>
        <br />
        @using (Html.BeginForm("SaveUpdatePassword", "Client", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MVUser.Email)
                @Html.HiddenFor(model => model.MVUser.FirstName)
                @Html.HiddenFor(model => model.MVUser.LastName)

                <div>

                    <b>Password :</b>
                    @Html.TextBoxFor(x => x.MVUser.Password, new { placeholder = "Password", @class = "input-box", @id = "Text1", @type = "password" })
                    <br />@Html.ValidationMessageFor(x => x.MVUser.Password, "", new { @class = "error" })
                    <br />


                    <b>Confirm Password :</b>
                    @Html.TextBoxFor(x => x.MVUser.ConfirmPassword, new { placeholder = "Confirm Password", @class = "input-box", @id = "Text1", @type = "password" })
                    <br />@Html.ValidationMessageFor(x => x.MVUser.ConfirmPassword, "", new { @class = "error" })
                    <br />








                </div>
            </div>
            <input id="submit1" type="submit"  value="Save" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>

    <div class="container">
        @using (Html.BeginForm("ClientHome", "Client", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Home" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }

        @using (Html.BeginForm("Logout", "Client", FormMethod.Post))
        {
            <input id="Submit1" type="submit" value="Log out" style="margin:10px;border-radius: 6px; background-color:black; color:white; padding: 8px 20px;" />
        }

    </div>

</body>
</html>




