@model Cinema_WebSite.Models.MembersLogin


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            background-image: url('https://image.freepik.com/free-photo/top-view-arrangement-of-cinema-elements-on-yellow-background-with-copy-space_23-2148416777.jpg');
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-size: cover;
            background-position: center;
            position:fixed;
        }

        input[type=submit] {
            background-color: darkred;
            border: none;
            color: white;
            padding: 12px 15px;
            text-decoration: none;
            margin: 2px 2px;
            cursor: pointer;
        }



        .split {
            height: 100%;
            
            position: fixed;
            z-index: -1;
            top: 0;
            overflow-x: hidden;
            
        }

        /* Control the left side */
    .left { background-image: url('https://static.cnews.fr/sites/default/files/violences_conjuguales_5e96efe7a6b00.jpg'); 
            width: 75%; 
            height:100%;
            left: 0; 
            background-color: white; }

        /* Control the right side */
        .right {
            right: 0;
            width: 25%;
            height: 100%;
            background-color: white;

        }


        .sign-up-form {
            height: 100%;
            background: #e3c520;
            text-align: center;
            padding-bottom:135px;
            padding-top:135px;
            
        }

        .inputbox {
            border-radius: 30px;
            padding: 5px;
            height: 20px;
            width: 185px;
            border: 1px solid #918787;
            outline: none;
        }

      
    </style>
</head>



<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/bootstrap.js"></script>


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />




<body>

    <div class="split left">
        <div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:5%; margin-bottom:5%; margin-left:32%; margin-right:32%">

            <ol class="carousel-indicators">
                <li data-target="#mycarousel" data-slide-to="0" class="active"> </li>
                <li data-target="#mycarousel" data-slide-to="1"> </li>
                <li data-target="#mycarousel" data-slide-to="2"> </li>
            </ol>



            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/images/A_Star_is_born-ConvertImage.jpg" />
                    <div class="carousel-caption">
                        <p>For more, please connect!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/images/The_maze_runner-ConvertImage.jpg" />
                    <div class="carousel-caption">
                        <p>For more, please connect!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/images/hunger_games-ConvertImage.jpg" />
                    <div class="carousel-caption">
                        <p>For more, please connect!</p>
                    </div>
                </div>
            </div>


            <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"> </span>
                <span class="sr-only"> Previous</span>
            </a>


            <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"> </span>
                <span class="sr-only"> Next</span>
            </a>


        </div>
    </div>


   

    <div class="split right">
        <div class="sign-up-form">

            <br /><br /><br /><br />
            <FONT size="18" face="Berlin Sans FB">CinemaCity</FONT>
            <br /><br /><br /><br />

            @using (Html.BeginForm("signIn", "Login", FormMethod.Post))
            {


                <div>
                    <FONT color="black">Sign into your CinemaCity account</FONT>
                </div>

                <br />

                <b><FONT face="Candara" style=" margin-right: 130px;">LOGIN</FONT></b>
                <br />

                @Html.TextBoxFor(x => x.Username, new { placeholder = "Username", @class = "inputbox", @id = "Text1", @type = "text" })
                <br /><br />


                <b><FONT face="Candara" style="margin-right: 90px;">PASSWORD</FONT></b>
                <br />


                @Html.TextBoxFor(x => x.Password, new { placeholder = "Password", @class = "inputbox", @id = "Text1", @type = "text" })
                <br /><br />



                <input id="submit" type="submit" value="Sign in" />
                <br /><br />

                <div>
                    Don't have an account?
                    @Html.ActionLink(
                        linkText: "    Click Here",
                        actionName: "SignUp",
                        controllerName: "Login"
                        )
                </div>

            }
        </div>
    </div>



</body>
</html>


